  "components": {
    "schemas": {
      "PoupancaSimulateDto": {
        "type": "object",
        "properties": {
          "amount": {
            "type": "number",
            "description": "Valor do investimento",
            "example": 1000
          },
          "months": {
            "type": "number",
            "description": "Meses de investimento",
            "example": 12
          }
        },
        "required": [
          "amount",
          "months"
        ]
      },
      "PoupancaSimulateResult": {
        "type": "object",
        "properties": {
          "investedAmount": {
            "type": "number",
            "description": "Valor Investido"
          },
          "periodInMonths": {
            "type": "number",
            "description": "Meses de investimento"
          },
          "totalProfit": {
            "type": "number",
            "description": "Rendimento Líquido"
          },
          "totalAmount": {
            "type": "number",
            "description": "Valor Total Líquido"
          },
          "profitability": {
            "type": "number",
            "description": "Rentabilidade da Poupança (a.m.) %"
          }
        },
        "required": [
          "investedAmount",
          "periodInMonths",
          "totalProfit",
          "totalAmount",
          "profitability"
        ]
      },
      "CdbSimulateDto": {
        "type": "object",
