{
  "openapi": "3.1.0",
  "paths": {
    "/simulation": {
      "post": {
        "operationId": "SimulationController_simulate",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SimulateDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SimulateResult"
                }
              }
            }
          }
        },
        "tags": [
          "simulation"
        ]
      }
    },
    "/feedback": {
      "post": {
        "operationId": "FeedbackController_simulate",
        "parameters": [],
