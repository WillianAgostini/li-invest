          "200": {
            "description": ""
          }
        },
        "tags": [
          "regulations"
        ]
      }
    },
    "/realTime": {
      "get": {
        "operationId": "RealTimeController_get",
        "parameters": [],
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RealTimeResponse"
                }
              }
            }
          }
        },
        "tags": [
