        ]
      }
    }
  },
  "info": {
    "title": "Investment Advisor",
    "description": "Assists in choosing fixed-income investments: CDB, RDB, LCI, LCA, and Savings Account.",
    "version": "1.0",
    "contact": {}
  },
  "tags": [],
  "servers": [
    {
      "url": "https://li-invest.koyeb.app"
    }
  ],
  "components": {
    "schemas": {
      "SimulateDto": {
        "type": "object",
        "properties": {
          "amount": {
            "type": "number",
            "description": "Valor do investimento",
            "example": 1000
          },
          "months": {
            "type": "number",
            "description": "Meses de investimento",
            "example": 12
          },
          "cdb": {
            "type": "number",
            "description": "CDB/RDB percentual CDI",
            "example": 100,
            "default": 100
          },
          "lcx": {
            "type": "number",
            "description": "LCI/LCA percentual CDI",
            "example": 100,
            "default": 100
          },
          "productId": {
            "type": "number",
            "description": "Código do Produto de Investimento cadastrado pela Comunidade"
          }
        },
        "required": [
          "amount",
          "months"
        ]
      },
      "CdbResult": {
        "type": "object",
        "properties": {
          "totalProfit": {
            "type": "number",
            "description": "Rendimento Líquido"
          },
          "totalAmount": {
            "type": "number",
            "description": "Valor Total Líquido"
          },
          "taxAmount": {
            "type": "number",
            "description": "Valor total IOF"
          },
          "taxPercentage": {
            "type": "number",
            "description": "Taxa IOF"
          },
          "iofAmount": {
            "type": "number",
            "description": "Imposto de Renda"
          },
          "cdi": {
            "type": "number",
            "description": "CDI (a.a.) %"
          },
          "profitability": {
            "type": "number",
            "description": "CDB/RDB percentual CDI"
          }
        },
        "required": [
          "totalProfit",
          "totalAmount",
          "taxAmount",
          "taxPercentage",
          "iofAmount",
          "cdi",
          "profitability"
        ]
      },
      "InvestmentData": {
        "type": "object",
        "properties": {
          "totalProfit": {
            "type": "number",
            "description": "Rendimento Líquido"
          },
          "totalAmount": {
            "type": "number",
            "description": "Valor Total Líquido"
          }
        },
        "required": [
          "totalProfit",
          "totalAmount"
        ]
      },
      "SimulateResult": {
        "type": "object",
        "properties": {
          "investedAmount": {
            "type": "number",
            "description": "Valor Investido"
          },
          "periodInMonths": {
            "type": "number",
            "description": "Meses de investimento"
          },
          "cdb": {
            "description": "CDB/RDB",
            "allOf": [
              {
                "$ref": "#/components/schemas/CdbResult"
              }
            ]
          },
          "lcx": {
            "description": "LCI / LCA",
            "allOf": [
              {
                "$ref": "#/components/schemas/InvestmentData"
              }
            ]
          },
          "poupanca": {
            "description": "Poupança",
            "allOf": [
              {
                "$ref": "#/components/schemas/InvestmentData"
              }
            ]
          }
        },
        "required": [
          "investedAmount",
          "periodInMonths",
          "cdb",
          "lcx",
          "poupanca"
        ]
      },
      "NewFeedbackDto": {
        "type": "object",
        "properties": {
          "conversation": {
            "type": "string",
            "description": "Resumo atual do ChatGPT"
          },
          "userComment": {
            "type": "string",
            "description": "Descrição do problema ou sugestão de melhoria fornecida pelo usuário"
          },
          "category": {
            "type": "string",
            "description": "Categoria do feedback gerada pelo ChatGPT com base na descrição em userComment"
          }
        },
        "required": [
          "conversation",
          "userComment",
          "category"
        ]
      },
      "CreateInvestmentResultDto": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "description": "Tipo da aplicação",
            "examples": [
              "LCA",
              "LCI",
              "CDB"
            ]
          },
          "issuer": {
            "type": "string",
            "description": "Emissor",
            "example": "Banco Itaú"
          },
          "originBank": {
            "type": "string",
            "description": "Banco que disponibiliza o investimento",
            "example": "Itaú"
          },
          "minimumApplication": {
            "type": "number",
            "description": "Aplicação Mínima",
            "example": 100
          },
          "maturity": {
            "type": "string",
            "description": "Vencimento",
            "example": "2025-12-31",
            "format": "date"
          },
          "profitability": {
            "type": "number",
            "description": "Rentabilidade",
            "example": 100
          },
          "profitabilityType": {
            "type": "string",
            "description": "Rentabilidade do",
            "example": "CDI",
            "default": "CDI"
          },
          "id": {
            "type": "number",
            "description": "ID"
          },
          "daysUntilMaturity": {
            "type": "number",
            "description": "Dias até o vencimento a partir da data atual",
            "example": 100
          },
          "monthsUntilMaturity": {
            "type": "number",
            "description": "Meses até o vencimento a partir da data atual",
            "example": 100
          }
        },
        "required": [
          "originBank",
          "minimumApplication",
          "maturity",
          "profitability",
          "profitabilityType",
          "id",
          "daysUntilMaturity",
          "monthsUntilMaturity"
        ]
      },
      "CreateInvestmentDto": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "description": "Tipo da aplicação",
            "examples": [
              "LCA",
              "LCI",
              "CDB"
            ]
          },
          "issuer": {
            "type": "string",
            "description": "Emissor",
            "example": "Banco Itaú"
          },
          "originBank": {
            "type": "string",
            "description": "Banco que disponibiliza o investimento",
            "example": "Itaú"
          },
          "minimumApplication": {
            "type": "number",
            "description": "Aplicação Mínima",
            "example": 100
          },
          "maturity": {
            "type": "string",
            "description": "Vencimento",
            "example": "2025-12-31",
            "format": "date"
          },
          "profitability": {
            "type": "number",
            "description": "Rentabilidade",
            "example": 100
          },
          "profitabilityType": {
            "type": "string",
            "description": "Rentabilidade do",
            "example": "CDI",
            "default": "CDI"
          }
        },
        "required": [
          "originBank",
          "minimumApplication",
          "maturity",
          "profitability",
          "profitabilityType"
        ]
      },
      "DetailedValues": {
        "type": "object",
        "properties": {
          "value": {
            "type": "number",
            "description": "Valor em %"
          },
          "updatedAt": {
            "type": "string",
            "description": "Data de atualização"
          }
        },
        "required": [
          "value",
          "updatedAt"
        ]
      },
      "Fees": {
        "type": "object",
        "properties": {
          "tr": {
            "description": "Taxa Referencial (a.m.) %",
            "allOf": [
              {
                "$ref": "#/components/schemas/DetailedValues"
              }
            ]
          },
          "ipca": {
            "description": "IPCA (a.a.) %",
            "allOf": [
              {
                "$ref": "#/components/schemas/DetailedValues"
              }
            ]
          },
          "cdi": {
            "description": "CDI (a.a.) %",
            "allOf": [
              {
                "$ref": "#/components/schemas/DetailedValues"
              }
            ]
          },
          "selic": {
            "description": "SELIC (a.a.) %",
            "allOf": [
              {
                "$ref": "#/components/schemas/DetailedValues"
              }
            ]
          },
          "poupanca": {
            "description": "Rentabilidade da Poupança (a.m.) %",
            "allOf": [
              {
                "$ref": "#/components/schemas/DetailedValues"
              }
            ]
          },
          "usd": {
            "description": "Dólar comercial",
            "allOf": [
              {
                "$ref": "#/components/schemas/DetailedValues"
              }
            ]
          },
          "rentabilidadeCdb": {
            "type": "number",
            "description": "CDB/RDB percentual CDI"
          },
          "rentabilidadeLcx": {
            "type": "number",
            "description": "LCI/LCA percentual CDI"
          }
        },
        "required": [
          "tr",
          "ipca",
          "cdi",
          "selic",
          "poupanca",
          "usd",
          "rentabilidadeCdb",
          "rentabilidadeLcx"
        ]
      },
      "RealTimeResponse": {
        "type": "object",
        "properties": {
          "fees": {
            "description": "Conjunto de taxas e índices financeiros",
            "allOf": [
              {
                "$ref": "#/components/schemas/Fees"
              }
            ]
          },
          "today": {
            "type": "string",
            "description": "Data atual",
            "example": "18/06/2024"
          }
        },
        "required": [
          "fees",
          "today"
        ]
      }
    }
  }
}